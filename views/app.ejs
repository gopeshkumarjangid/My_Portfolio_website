  <script>
  const roles = ["Full Stack Web Developer", "Product Manager", "Computer Science Engineer"];
  const roleSpan = document.getElementById("role-text");
  let roleIndex = 0;
  let charIndex = 0;
  let typing = true;

  function typeRole() {
    const currentRole = roles[roleIndex];

    if (typing) {
      if (charIndex <= currentRole.length) {
        roleSpan.textContent = currentRole.substring(0, charIndex);
        charIndex++;
        setTimeout(typeRole, 100); // Typing speed
      } else {
        typing = false;
        setTimeout(typeRole, 1000); // Wait after full word
      }
    } else {
      if (charIndex >= 0) {
        roleSpan.textContent = currentRole.substring(0, charIndex);
        charIndex--;
        setTimeout(typeRole, 100); // Erasing speed
      } else {
        typing = true;
        roleIndex = (roleIndex + 1) % roles.length;
        setTimeout(typeRole, 500); // Wait before next word starts typing
      }
    }
  }

  typeRole();
</script>




